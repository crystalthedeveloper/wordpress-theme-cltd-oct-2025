{
  "apiVersion": 3,
  "name": "cltd/button",
  "title": "CLTD Button Block",
  "description": "Custom button using CLTD design tokens and hover animation.",
  "category": "cltd",
  "icon": "button",
  "textdomain": "cltd-theme-oct-2025",
  "attributes": {
    "text": {
      "type": "string",
      "default": "Click me"
    },
    "url": {
      "type": "string",
      "default": ""
    },
    "rel": {
      "type": "string",
      "default": ""
    },
    "linkTarget": {
      "type": "string",
      "default": ""
    },
    "ariaLabel": {
      "type": "string",
      "default": ""
    },
    "align": {
      "type": "string",
      "default": ""
    },
    "borderRadius": {
      "type": "number",
      "default": null
    },
    "borderWidth": {
      "type": "number",
      "default": null
    },
    "borderColor": {
      "type": "string",
      "default": ""
    }
  },
  "supports": {
    "align": [
      "left",
      "center",
      "right",
      "wide",
      "full"
    ],
    "spacing": {
      "margin": true,
      "padding": true
    },
    "anchor": true,
    "shadow": true,
    "color": {
      "text": true,
      "background": true,
      "gradients": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true,
      "fontStyle": true,
      "fontWeight": true,
      "textTransform": true,
      "letterSpacing": true
    }
  },
  "editorScript": "file:./index.js",
  "style": "file:./style.css",
  "editorStyle": "file:./editor.css"
}
